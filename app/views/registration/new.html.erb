<h1>Sign Up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

<%= form.label :email %>
<div class="mb-3">
    <%= form.text_field :email, class: "form-control", placeholder: "user@email.com" %>
</div>

<%= form.label :password %>
<div class="mb-3">
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
</div>

<%= form.label :confirm_password %>
<div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
</div>

<div class="mb-3">
    <%= form.submit %>
</div>

<% end %>